<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    tools:context=".FarmerHomeActivity">

    <Button
        android:id="@+id/governmentscheme"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Apply Government Scheme"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        />

    <Button
        android:id="@+id/aggriproduct"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Agri Product"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/governmentscheme"
        android:layout_marginLeft="100dp"
        />

    <Button
        android:id="@+id/showImage1Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="E-Market Farm Equipments"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/aggriproduct"
        android:layout_marginLeft="100dp"
        />



</RelativeLayout>