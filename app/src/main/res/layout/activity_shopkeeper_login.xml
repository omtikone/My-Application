<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopkeeperLoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopkeeper Login"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/username5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Shopkeeper Name"
        android:layout_marginTop="70dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleDrawable="@drawable/icon_selector"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password5"
            android:imeOptions="actionNext"
            android:layout_marginTop="150dp"
            android:hint="Enter Password"
            android:inputType="textPassword"


            />
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:id="@+id/btnsignin5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:layout_marginTop="250dp"
        />

    <Button
        android:id="@+id/btnsignup5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btnsignin5"
        />
</RelativeLayout>